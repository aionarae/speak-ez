<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upcoming Services</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <section class="section" id="user-services-page">
        <div class="container">
            <h1 class="title has-text-centered">Upcoming Services</h1>
            <!-- Back button -->
            <button onclick="window.history.back();" class="button is-info">Back to Services List</button>
            <div class="box">
                <div class="content">
                    <ul>
                        {{#each userServices}}
                            <li class="mb-2">
                                <article class="media">
                                    <div class="media-content">
                                        <div class="content">
                                            <p>
                                                <strong>{{this.date}} - {{this.time}}</strong> <small>{{this.name}}</small>
                                                <br>
                                                <em>{{this.description}}</em>
                                            </p>
                                        </div>
                                    </div>
                                </article>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="hero-background">
            <div class="circle large"></div>
            <div class="circle medium"></div>
            <div class="circle small"></div>
        </div>
    </section>

    <script src="script.js"></script>
</body>
</html>

