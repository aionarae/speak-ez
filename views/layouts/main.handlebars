<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Speak EZ</title>
  <!-- Bulma CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.3/css/bulma.min.css">
  <!-- Custom styles -->
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <nav class="navbar" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <a class="navbar-item" href="/">
        <span role="img" aria-label="speech bubble">ðŸ’¬</span> Speak EZ
      </a>
    </div>

    <div class="navbar-menu">
      <div class="navbar-end">
        <!-- Conditional rendering based on login status -->
        {{#if logged_in}}
        <div class="navbar-item">
          <button class="button is-light" id="logout" onclick="logoutUser()">Logout</button>
        </div>
        {{else}}
        <a class="navbar-item" href="/login">Login</a>
        {{/if}}
      </div>
    </div>
  </nav>

  <!-- Render the sub layout -->
  {{{ body }}}

  <!-- Logout script for logged in users -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  <script>
    function logoutUser() {
      fetch('/logout', {
        method: 'POST'
      }).then(() => {
        window.location = '/login';
      }).catch((error) => {
        console.error('Logout failed:', error);
      });
    }
  </script>
  {{/if}}
</body>

</html>
